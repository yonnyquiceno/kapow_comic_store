<div class="top-space"></div>
<div class="flex-container">
    <div class="blank-space"></div>
    <div class="form-container">
<h2>Registrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-l-t-pair">
    <%= f.label "Nombres(s)" %>
    <%= f.text_field :first_name, autofocus: true, required: true %>
  </div>

  <div class="form-l-t-pair">
    <%= f.label "Apellidos" %>
    <%= f.text_field :last_name, autofocus: true, required: true %>
  </div>

  <div class="form-l-t-pair">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="form-l-t-pair">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="form-l-t-pair">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions submit-section">
    <%= f.submit "Registrarse", class: 'button' %><br>
    <%= link_to "ya tiene una cuenta?", new_session_path(resource_name) %>
  </div>
<% end %>
</div>
<div class="blank-space"></div>
</div>
<%= render "devise/shared/links" %>
